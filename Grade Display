#!/bin/bash

pass_count=0
fail_count=0

while true; do
  echo "Enter Student ID:"
  read student_id

  echo "Enter marks for Subject 1:"
  read s1
  echo "Enter marks for Subject 2:"
  read s2
  echo "Enter marks for Subject 3:"
  read s3

  total=$((s1 + s2 + s3))
  percentage=$((total * 100 / 300))

  # Grade 
  if (( percentage >= 80 )); then
    grade="A+"
  elif (( percentage >= 70 )); then
    grade="A"
  elif (( percentage >= 60 )); then
    grade="B"
  elif (( percentage >= 50 )); then
    grade="C"
  elif (( percentage >= 40 )); then
    grade="D"
  else
    grade="F"
  fi

  # Pass/Fail 
  if (( percentage >= 40 )); then
    ((pass_count++))
  else
    ((fail_count++))
  fi

  echo "Student ID: $student_id"
  echo "Total Marks: $total"
  echo "Percentage: $percentage%"
  echo "Grade: $grade"

  read -p "Do you want to enter another student? (y/n): " choice
  if [[ "$choice" != "y" ]]; then
    break
  fi
done

echo "Total Passed Students: $pass_count"
echo "Total Failed Students: $fail_count"
